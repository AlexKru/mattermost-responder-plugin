{
    "id": "com.alexkru.mattermost-responder-plugin",
    "name": "Responder plugin",
    "description": "This plugin response with predefined message for keywords",
    "homepage_url": "https://github.com/AlexKru/mattermost-responder-plugin",
    "support_url": "https://github.com/AlexKru/mattermost-responder-plugin/issues",
    "release_notes_url": "https://github.com/AlexKru/mattermost-responder-plugin/tag/v0.1.0",
    "icon_path": "assets/starter-template-icon.svg",
    "version": "0.1.0",
    "min_server_version": "6.2.1",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "linux-arm64": "server/dist/plugin-linux-arm64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [
            {
                "key": "Keyword",
                "display_name": "Keywords, comma-separated",
                "type": "text",
                "placeholder": "ex.: wifi,вайфай"
            },
            {
                "key": "Response",
                "display_name": "Message to response",
                "type": "longtext",
                "placeholder": "ex.: Our WiFi password is: ourSecretPassword123"
            }
        ]
    }
}
